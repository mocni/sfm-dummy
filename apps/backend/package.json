{
  "name": "@smart-fleet-management/backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm:migration:generate": "npm run typeorm migration:generate",
    "typeorm:schema:sync": "pnpm run typeorm schema:sync -d dist/data-source.js",
    "typeorm:migration:run": "pnpm run typeorm migration:run",
    "clean": "pnpm clean:build & pnpm clean:node_modules & pnpm clean:turbo-cache",
    "clean:build": "rm -rf dist",
    "clean:node_modules": "rm -rf node_modules",
    "clean:turbo-cache": "rm -rf .turbo",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "pnpm typeorm migration:run -d dist/config/typeorm.config.js",
    "migration:create": "pnpm typeorm migration:create -d dist/config/typeorm.config.js",
    "migration:generate": "pnpm typeorm migration:generate -d dist/config/typeorm.config.js",
    "migration:revert": "pnpm typeorm migration:revert -d dist/config/typeorm.config.js"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "7.3.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/throttler": "6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@smart-fleet-management/common": "workspace:*",
    "@smart-fleet-management/users": "workspace:*",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dotenv": "16.4.5",
    "nestjs-zod": "4.2.0",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "save": "2.9.0",
    "typeorm-ts-node-commonjs": "0.3.20",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@smart-fleet-management/eslint-config": "workspace:*",
    "@smart-fleet-management/tsconfig": "workspace:*",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-local": "1.0.38",
    "@types/supertest": "^6.0.0",
    "cross-env": "7.0.3",
    "eslint": "^8.57.0",
    "jest": "^29.5.0",
    "pg": "8.12.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "0.3.20",
    "typescript": "^5.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
